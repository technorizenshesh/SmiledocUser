<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DoctorMapFragment">

      <LinearLayout
        android:id="@+id/linear_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/ic_rectangle"
                android:orientation="horizontal"
                android:padding="@dimen/_15sdp">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_backk">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Doctors"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_locationn">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_header"
        android:background="@color/black"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/image_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="@dimen/_15sdp"
                android:padding="@dimen/_15sdp"
                android:src="@drawable/pin_marker">

            </ImageView>

              <LinearLayout
                android:id="@+id/li1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFDCDC"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="@dimen/_245sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edit_search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/ic_searchdr">

                    </ImageView>

                     <AutoCompleteTextView
                        android:id="@+id/gettypedlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/clear_pick_ic"
                        android:background="@null"
                        android:hint="search"
                        android:inputType="textNoSuggestions"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#636262" />

                      <EditText
                        android:id="@+id/edittext_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/clear_pick_ic"
                        android:background="@null"
                        android:hint="search"
                        android:inputType="textNoSuggestions"
                        android:layoutDirection="locale"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#636262"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/clear_pick_ic"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:visibility="visible" />

                </LinearLayout>

                 <TextView
                    android:id="@+id/done_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/done"
                    android:textColor="@color/purple_200"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

              <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/li1" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
</layout>


